#! /bin/bash
export RAILS_ENV=development

bundle check || bundle install --jobs=10

for ENV_NAME in development test; do
  FILE=/portal/tmp/database_initialised_$ENV_NAME.txt
  if [ ! -f "$FILE" ]; then
    echo "Creating and loading $ENV_NAME databases"
    RAILS_ENV=$ENV_NAME bundle exec rake db:create db:structure:load
    touch "$FILE"
  fi
done

echo "Migrating and refreshing reference data"
bundle exec rake db:migrate easy:reference_data:refresh
RAILS_ENV=test bundle exec rake db:migrate

rm -f tmp/pids/server.pid

bundle exec rails s -p 3000 -b '0.0.0.0'
